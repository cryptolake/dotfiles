bindsym Control+XF86AudioLowerVolume	exec  pulsemixer --change-volume -1 && pkill -RTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume	exec  pulsemixer --change-volume +5 && pkill -RTMIN+10 i3blocks
bindsym Shift+XF86AudioRaiseVolume	exec  pulsemixer --change-volume +10 && pkill -RTMIN+10 i3blocks
bindsym Control+XF86AudioRaiseVolume	exec  pulsemixer --change-volume +1 && pkill -RTMIN+10 i3blocks
bindsym XF86PowerOff		exec  prompt "Shutdown computer?" "$shutdown"
