# #---Arrow Keys---# #
bindsym $mod+Left		focus left
bindsym $mod+Shift+Left		move left
bindsym $mod+Ctrl+Left		move workspace to output left
bindsym $mod+Down		focus down
bindsym $mod+Shift+Down		move down
bindsym $mod+Ctrl+Down		move workspace to output down
bindsym $mod+Up			focus up
bindsym $mod+Shift+Up		move up
bindsym $mod+Ctrl+Up		move workspace to output up
bindsym $mod+Right 		focus right
bindsym $mod+Shift+Right 	move right
bindsym $mod+Ctrl+Right		move workspace to output right

# #---Media Keys---# #
# Volume keys
bindsym $mod+plus		exec  pulsemixer --change-volume +5 && pkill -RTMIN+10 i3blocks
bindsym $mod+Shift+plus		exec  pulsemixer --change-volume +15 && pkill -RTMIN+10 i3blocks
bindsym $mod+minus 		exec  pulsemixer --change-volume -5 && pkill -RTMIN+10 i3blocks
bindsym $mod+Shift+minus	exec  pulsemixer --change-volume -15 && pkill -RTMIN+10 i3blocks
bindsym $mod+less 		exec  mpc prev
bindsym $mod+Shift+less		exec  mpc seek 0%
bindsym $mod+greater		exec  mpc next
bindsym $mod+Shift+greater	exec  mpc next

# For advancing forward/backward in an mpd song
bindsym $mod+bracketleft 	exec  mpc seek -10
bindsym $mod+Shift+bracketleft 	exec  mpc seek -120
bindsym $mod+bracketright 	exec  mpc seek +10
bindsym $mod+Shift+bracketright exec  mpc seek +120

# For screenshots and recording
bindsym Print 			exec  maim pic-full-"$(date '+%y%m%d-%H%M-%S').png"
bindsym Shift+Print 		exec  maimpick
bindsym $mod+Print		exec  dmenurecord
bindsym $mod+Scroll_Lock	exec  "killall screenkey || screenkey"
bindsym $mod+Delete		exec $stoprec
bindsym XF86Launch1		exec  xset dpms force off

